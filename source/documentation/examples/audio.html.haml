        :::go
        package main

        import (
        	"time"

        	"github.com/hybridgroup/gobot"
        	"github.com/hybridgroup/gobot/platforms/audio"
        )

        func main() {
        	e := audio.NewAdaptor()
        	laser := audio.NewDriver(e, "./examples/laser.mp3")

        	work := func() {
        		gobot.Every(2*time.Second, func() {
        			laser.Play()
        		})
        	}

        	robot := gobot.NewRobot("soundBot",
        		[]gobot.Connection{e},
        		[]gobot.Device{laser},
        		work,
        	)

        	robot.Start()
        }

